{
	"extends": ["airbnb", "prettier"],
	"plugins": ["prettier"],
	"rules": {
		"prettier/prettier": ["error"],
		"react/jsx-indent": ["error", "tab"],
        "react/jsx-indent-props": ["error", "tab"],
        "react/require-default-props": "off",
        "react/react-in-jsx-scope": "off"
	},
	"env": {
		"browser": true,
		"es6": true,
		"node": true
	},
	"settings": {
    "import/resolver": {
      "node": {
        "paths": ["src"]
      }
    }
  }
}